{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://techlib.cz/specification/ccmm/location/schema.json",
  "title": "Location",
  "description": "Spatial region, named place or geometry representation of a place related to the dataset. ",
  "type": "object",
  "required": [
    "dataset_relations"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "iri"
    },
    "type": {
      "oneOf": [
        {
          "const": "Location"
        },
        {
          "type": "array",
          "contains": {
            "const": "Location"
          },
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "bbox": {
      "title": "Bbox",
      "description": "Bounding box of the location geometry.",
      "type": "array",
      "items": {
        "title": "http://www.w3.org/2000/01/rdf-schema#Literal",
        "type": "string"
      }
    },
    "location_name": {
      "title": "Location name",
      "description": "Name of the spatial location.",
      "type": "array",
      "items": {
        "title": "String",
        "type": "string"
      }
    },
    "dataset_relations": {
      "title": "Relation type",
      "description": "Type of the relation between Dataset and related resource.",
      "type": "string"
    },
    "geometry": {
      "$ref": "../geometry/schema.json"
    },
    "related_object_identifier": {
      "title": "has related resource",
      "type": "array",
      "items": {
        "$ref": "../resource/schema.json"
      }
    }
  }
}